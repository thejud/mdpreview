{
  "name": "mdpreview",
  "version": "2.0.0",
  "description": "Fast, lightweight CLI tool to convert Markdown to HTML with GitHub-like styling",
  "module": "src/cli.ts",
  "type": "module",
  "private": true,
  "bin": {
    "mdpreview": "./src/cli.ts"
  },
  "scripts": {
    "test": "bun test",
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile mdpreview",
    "build:macos-arm64": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile dist/mdpreview-macos-arm64",
    "build:macos-x64": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile dist/mdpreview-macos-x64",
    "build:linux-x64": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile dist/mdpreview-linux-x64",
    "build:linux-arm64": "bun build src/cli.ts --compile --target=bun-linux-arm64 --outfile dist/mdpreview-linux-arm64",
    "build:windows-x64": "bun build src/cli.ts --compile --target=bun-windows-x64 --outfile dist/mdpreview-windows-x64.exe",
    "build:all": "bun run build:macos-arm64 && bun run build:macos-x64 && bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:windows-x64"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^11.2.0",
    "marked-gfm-heading-id": "^3.1.3",
    "marked-highlight": "^2.2.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/marked": "^6.0.0",
    "@types/node": "^24.6.1",
    "playwright": "^1.55.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
