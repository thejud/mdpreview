  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^11.2.0",
    "marked-gfm-heading-id": "^3.1.3",
    "marked-highlight": "^2.2.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/marked": "^6.0.0",
    "@types/node": "^24.6.1",
    "playwright": "^1.55.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
