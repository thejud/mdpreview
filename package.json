{
  "name": "mdpreview",
  "version": "2.0.0",
  "description": "Fast, lightweight CLI tool to convert Markdown to HTML with GitHub-like styling",
  "module": "src/cli.ts",
  "type": "module",
  "private": true,
  "bin": {
    "mdpreview": "./src/cli.ts"
  },
  "scripts": {
